---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/milavik-landing-page/favicon.svg"
    />
    <meta
      name="description"
      content="Busca una solución informática para tu negocio o empresa"
    />
    <meta name="viewport" content="width=device-width" />

    <title>{title}</title>
    <style>
      /* Evita que el body tenga el fondo */
      body {
        margin: 0;
        width: 100%;
      }

      /* Aplica el degradado y el fondo de mosaico solo al contenido */
      .content-background {
        position: relative;
        min-height: 100vh;
        background: linear-gradient(to bottom, #061c29, #529b5f);
        overflow: hidden;
      }

      /* Fondo de mosaico con 50% de opacidad */
      .svg-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0.2; /* 50% de opacidad */
        --s: 100px; /* Tamaño del patrón */
        --c1: #0d2c2e;
        --c2: #031926;
        --_g: var(--c2) 6% 14%, var(--c1) 16% 24%, var(--c2) 26% 34%,
          var(--c1) 36% 44%, var(--c2) 46% 54%, var(--c1) 56% 64%,
          var(--c2) 66% 74%, var(--c1) 76% 84%, var(--c2) 86% 94%;
        background:
          radial-gradient(
            100% 100% at 100% 0,
            var(--c1) 4%,
            var(--_g),
            #0008 96%,
            #0000
          ),
          radial-gradient(
              100% 100% at 0 100%,
              #0000,
              #0008 4%,
              var(--_g),
              var(--c1) 96%
            )
            var(--c1);
        background-size: var(--s) var(--s);
      }

      /* Asegura que el contenido principal esté sobre el fondo */
      .main-content {
        position: relative;
        z-index: 1;
        width: 100%;
        padding-bottom: 7rem;
      }
    </style></head
  >

  <body>
    <Header />
    <div class="content-background">
      <div class="svg-background"></div>
      <main class="main-content">
        <slot />
      </main>
    </div>
    <Footer />
  </body>
</html>
