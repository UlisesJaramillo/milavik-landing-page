---
import Tecnologias from "./Tecnologias.astro";
import VerMas from "./VerMas.astro";

const { title, description, image, images } = Astro.props;
---

<script>
  let isModalOpen = false;
  // Find all buttons with the `alert` class on the page.
  const buttons = document.querySelectorAll("button.vermas");

  // Handle clicks on each button.
  buttons.forEach((button) => {
    button.addEventListener("click", () => {
      console.log("modal");
      isModalOpen = !isModalOpen;
    });
  });
</script>

<div
  class="flex w-80 bg-[#061C29] rounded-[8px] shadow-md transform hover:scale-105 transition-transform duration-300 ease-in-out flex-col justify-between"
>
  <img
    class="w-auto object-cover rounded-t-[8px] mx-auto"
    alt="Card Image"
    src={image}
  />
  <div class="grow"></div>
  <div class="p-4 flex flex-col flex-none">
    <h2 class="text-xl font-semibold text-[#FDFAD6]">{title}</h2>
    <p class="text-[#FDFAD6] mt-2 flex-grow">
      {description}
    </p>

    <div class="flex justify-center space-x-4 mt-4">
      <!--  
      <button
        class="vermas bg-[#529B5F] hover:bg-blue-600 text-white px-4 py-2 font-bold rounded-full focus:outline-none focus:ring-2 focus:ring-blue-400"
      >
        Ver m√°s
      </button>
      -->
      <Tecnologias imagenes={images} />
    </div>
  </div>
</div>
